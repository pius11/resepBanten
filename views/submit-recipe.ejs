<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Bagikan pengetahuan banten anda</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Bagikan pengalaman membuat banten anda untuk mebantu masyarakat Hindu diluar sana.</p>
  </div>
</div>

<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>

  <div class="col-8">

    <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">

        <div class="col-12">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" id="email" class="form-control">
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Nama Banten</label>
          <input type="text" name="name" id="name" class="form-control" required>
        </div>
        
        <div class="col-12">
          <label for="description" class="form-label">Deskripsi</label>
          <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
        </div>

        <div class="col-12">
          <label for="name" class="form-label">Bahan-bahan</label><br>
          <small>Contoh: busung</small>
          <div class="ingredientList">
            <div class="ingredeintDiv mb-1">
              <input type="text" name="ingredients" class="form-control">
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Bahan-bahan</button>
        </div>

        <div class="col-12">
          <label for="category">Pilih Kategori</label>
          <select class="form-select form-control" name="category" aria-label="Category">
            <option selected>Pilih Kategori</option>
            <option value="nista">nista</option>
            <option value="madya">madya</option>
            <option value="utama">utama</option>
            
            
          </select>
        </div>

        <div class="col-12">
          <label for="image">Gambar Banten</label>
          <input type="file" class="form-control" name="image" accept="image/*">
        </div>

        <div class="col-12">
          <label for="video">Video Tutorial</label> <br>
          <small>video format mp4</small>
          <input type="file" class="form-control" name="video" accept="video/*">
        </div>
        <div class="col-12">
          <label for="chanell" class="form-label">video dari</label>
          <input type="text" name="chanell" id="chanell" required>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Kirim Banten</button>
        </div>
        

      </div>
    
    </form>

  </div>
</div>